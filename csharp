using UnityEngine;

public class Fazenda : MonoBehaviour
{
    public int recursos = 0;
    public int nivel = 1;

    public void Produzir()
    {
        int producaoBase = 10;
        recursos += producaoBase * nivel;
        Debug.Log("Recursos: " + recursos);
        VerificarNivel();
    }

    void VerificarNivel()
    {
        if (recursos >= 50 && nivel == 1) { nivel++; Debug.Log("NÃ­vel da fazenda: " + nivel); }
    }
}
